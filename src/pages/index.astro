---
import Layout from '@layouts/Layout.astro';
import Icon from '@components/Icon.astro';
import { Tooltips } from 'astro-tooltips';

const randomInt = (min: number, max: number) =>
		Math.floor(Math.random() * (max - min + 1)) + min;
	
	const genRandomPrettyColor = () =>
		`hsl(${randomInt(0, 360)},${randomInt(42, 98)}%,${randomInt(40, 90)}%)`;
	
	const textGradient = `45deg, ${genRandomPrettyColor()} -20%, ${genRandomPrettyColor()} 50%`;
---

<Layout
	title="React Typescript Senior Web Developer | aandre.gg"
	description={'Hello, I am Andre, always happy to help with any interesting projects!, let me know'}
>
	<main>
		<div class="outter flex my-0 mx-auto gap-4">
			<div>
				<div class="logo-container" style={{background: `linear-gradient(${textGradient})`}}>
					<img class="logo" src="/logo-type.svg" alt="logo-type" width="40px" height="40px"/>
				</div>
				<p class="pt-4">Hi, I'm</p>
				<h1 class="font-semibold">Andre <br/> Kuznetcov</h1>
				<p>I write code and think about solutions.  ðŸ‘‹</p>
			</div>
			<div class="inner-links">
				<a href='/Andre_Kuznetcov_resume_2023.pdf' class="resume-link" download>ðŸ“– My resume</a>
				<div class="flex gap-2 justify-end">
					<a href='https://www.linkedin.com/in/andrewebdev' rel="noreferrer noopener">
						<Icon icon="linkedin"/>
					</a>
					<a href='https://github.com/KatFishSnake' rel="noreferrer noopener">
						<Icon icon="github"/>
					</a>
				</div>
				<div class="flex gap-2">
					<span title='<p>Email me!</br> </br> <code>andre [dot] kuzac [at] gmail</code></p>' data-tooltip-interactive="top" class="inner-link-message">
						<Icon icon="message"/>
					</span>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
    align-items: center;
		width: 100%;
	}

	body {
		font-family: 'Changa', sans-serif;
	}

	h1 {
		line-height: 0.8;
		font-size: 72px !important;
	}

	p {
		font-size: 24px;
	}

	.outter {
		max-width: 680px;
	}

	.inner-links {
		display: flex;
		flex-direction: column;
	}

	.logo {
		width: 40px;
	}
	.logo-container {
		width: 40px;
		height: 40px;
	}

	.resume-link {
		color: black;
		text-decoration: none;
		font-size: 24px;
	}

	.resume-link:hover {
		text-decoration: underline;
	}

	.inner-links > div {
		justify-content: right;
	}

	.inner-links a:not(.resume-link), .inner-links span:not(.resume-link) {
		color: #00A4D8;
		text-decoration: none;
	}
	
	.inner-links a:not(.resume-link):hover {
		color: #8cd1e9;
	}

	.inner-links svg {
		width: 42px;
	}

	.inner-links .inner-link-message svg {
    padding-top: 10px;
    padding-right: 3px;
    width: 36px;
    box-sizing: content-box;
	}

	@media (max-width: 680px) {
		.outter {
			flex-direction: column;
			align-items: flex-start;
			padding: 0 20px;
		}

		.inner-links {
			margin-top: 20px;
		}
		.resume-link {
			margin-bottom: 10px;
		}

		.inner-links svg {
			width: 56px;
		}

		.inner-links .inner-link-message svg {
			padding-top: 10px;
			padding-left: 7px;
			width: 45px;
		}

		.inner-links > div {
			justify-content: left;
		}
	}
</style>

