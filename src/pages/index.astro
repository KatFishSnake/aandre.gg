<style>
	main {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
    align-items: center;
		width: 100%;
	}

	body {
		font-family: 'Changa', sans-serif;
	}

	h1, p {
		margin: 0;
	}

	h1 {
		line-height: 0.8;
		font-size: 72px;
	}

	p {
		font-size: 24px;
	}

	.outter {
		max-width: 680px;
		display: flex;
		margin: 0 auto;
	}

	.inner-copy {

	}

	.inner-links {
		display: flex;
		flex-direction: column;
	}

	.logo {
		width: 40px;
	}
	.logo-container {
		width: 40px;
		height: 40px;
	}

	.resume-link {
		color: black;
		text-decoration: none;
		font-size: 24px;
	}

	.resume-link:hover {
		text-decoration: underline;
	}

	.inner-links a:not(.resume-link) {
		color: #00A4D8;
		text-decoration: none;
	}
	.inner-links a:not(.resume-link):hover {
		color: #8cd1e9;
	}

	.inner-links svg {
		width: 42px;
	}

	@media (max-width: 680px) {
		.outter {
			flex-direction: column;
			align-items: flex-start;
			padding: 0 20px;
		}

		.inner-links {
			margin-top: 20px;
		}
		.resume-link {
			margin-bottom: 10px;
			font-size: 20px;
		}

		.inner-links svg {
			width: 56px;
		}
	}

</style>

